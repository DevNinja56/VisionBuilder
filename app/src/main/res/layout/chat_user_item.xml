<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:outlineSpotShadowColor="@color/colorBlack"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="@dimen/_5sdp"
    android:elevation="5dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_picture"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_margin="15dp"
        fab:fabSize="mini"
        android:src="@drawable/user_img_ic"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:layout_toRightOf="@id/user_picture"
        android:layout_marginTop="@dimen/_12sdp"
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="Username"
        android:textColor="@color/text_Color"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />
    <TextView
        android:layout_toRightOf="@id/username"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/unseen_MsgsCount"
        android:textStyle="bold"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:text="1"
        android:gravity="center"
        android:textSize="11dp"
        />
        <ImageView
            android:id="@+id/my_LastMsgIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_curve_ic"
            android:layout_toRightOf="@id/user_picture"
            android:layout_below="@id/username"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />
        <TextView
            android:id="@+id/last_msg"
            android:layout_below="@id/username"
            android:layout_toRightOf="@id/my_LastMsgIcon"
            android:textStyle="bold"
            android:textColor="@color/textColorLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last msg will show here"
            android:textSize="@dimen/_12sdp"
            android:gravity="center_vertical"
            android:maxWidth="220dp"
            android:maxLines="2"
            />
    <TextView
        android:id="@+id/last_MsgTime"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textColor="@color/textColorLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="20dp"
        android:text="5 MINS AGO"
        android:textSize="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:maxWidth="220dp"
        android:maxLines="2"
        />
</RelativeLayout>
