<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_146sdp"
    android:paddingLeft="@dimen/_25sdp"
    android:paddingRight="@dimen/_18sdp"
    android:paddingTop="@dimen/_25sdp"
    android:paddingBottom="@dimen/_18sdp"
    android:layout_marginVertical="@dimen/_8sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:id="@+id/nav_Layout"
    android:background="@drawable/bg_nav"
    android:backgroundTint="@color/colorBlack">
    <TextView
        android:id="@+id/navigation_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Saving Plan"
        android:textSize="@dimen/_19sdp"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/details"
        android:visibility="gone"
        android:layout_below="@id/navigation_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Rent Billn\nCable Bill\nMaintenance Bill"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/colorWhite"/>

    <ImageView
        android:id="@+id/navigation_Icon"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:src="@drawable/meeting_ic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>