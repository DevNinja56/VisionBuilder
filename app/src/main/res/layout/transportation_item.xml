<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:elevation="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginHorizontal="@dimen/_25sdp"
    android:id="@+id/item"
    android:background="@drawable/bg_rounded_corners_light"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_circle"

        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/btn_Delete"
        android:translationZ="1dp"
        android:elevation="5dp"

        >

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/delete_ic"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_circle"
        android:layout_below="@+id/btn_Delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:id="@+id/btn_add_reminde"
        android:translationZ="1dp"
        android:elevation="5dp"
        >

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/edit_ic"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/upper_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_Heading"
            android:maxWidth="@dimen/_200sdp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="800"
            android:text="LOCATION"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/destination"
            android:maxWidth="@dimen/_200sdp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="destination"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/shop_name"
            android:maxWidth="@dimen/_280sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="4500 $"
            android:textFontWeight="800"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/remind_me_about"
            android:maxWidth="@dimen/_280sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="23 Sep 2020  |  03:20"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>

</RelativeLayout>